# si - simple interpreter

PROGRAM_NAME=si

SOURCE_DIR=src

BUILD_DIR=build

BUILD_DIR_DEBUG=$(BUILD_DIR)/debug

BUILD_DIR_RELEASE=$(BUILD_DIR)/release

INSTALL_TOP=/usr/local

INSTALL_BIN=$(INSTALL_TOP)/bin

LIBS=-lreadline

LIBS_RELEASE=

FLAGS=$(SOURCE_DIR)/*.c -Iinclude -Wall

FLAGS_DEBUG=-g

FLAGS_LOCAL=-o $(BUILD_DIR_DEBUG)/$(PROGRAM_NAME) -O2 -D TRACK_MEMORY -D USE_READLINE $(LIBS)

FLAGS_RELEASE=-o $(BUILD_DIR_RELEASE)/$(PROGRAM_NAME) -O2 -Werror -D NDEBUG $(LIBS_RELEASE)

CC=gcc
